<Page x:ConnectionId='1'
    x:Class="MainApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MainApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel Margin="12">
        <TextBlock x:ConnectionId='2' x:Name="ListaPlanovaTitle" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center" Text="Fire prediction using logistic regression" Margin="0,20" />
        <CommandBar x:ConnectionId='3' x:Name="planoviCommandBar" OverflowButtonVisibility="Collapsed" IsOpen="False" DefaultLabelPosition="Right" RelativePanel.Below="ListaPlanovaTitle">
            <AppBarButton x:ConnectionId='5' Icon="Upload" Label="Učitaj podatke"                                          />
            <AppBarSeparator />
            <AppBarButton x:ConnectionId='6' Icon="Calculator" Label="Izračunaj"                                        />
            <!--<AppBarButton Icon="Delete" Label="Ukloni" Command="{x:Bind ViewModel.Ukloni}" CommandParameter="{Binding ElementName=planoviDataGrid, Path=SelectedItem}" />-->
        </CommandBar>
        <controls:DataGrid x:ConnectionId='4' x:Name="dataList" RelativePanel.Below="planoviCommandBar"
                           AutoGenerateColumns="False" Height="400" Margin="0 10 0 0"
                           VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                           AlternatingRowBackground="Transparent" AlternatingRowForeground="Black"
                           IsReadOnly="True" SelectionMode="Extended"
                                                                                              
                                                                >
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn
                    Header="Temperature"
                    Width="SizeToHeader"
                    FontSize="20"
                    Binding="{Binding Temperature}" />
                <controls:DataGridTextColumn
                    Header="Wind speed"
                    Width="SizeToHeader"
                    FontSize="20"
                    Binding="{Binding WindSpeed}" />
                <controls:DataGridTextColumn
                    Header="Relative humidity"
                    Width="SizeToHeader"
                    FontSize="20"
                    Binding="{Binding RelativeHumidity}" />
                <controls:DataGridTextColumn
                    Header="Precipitation"
                    Width="SizeToHeader"
                    FontSize="20"
                    Binding="{Binding Precipitation}" />
                <controls:DataGridTextColumn
                    Header="FFMC"
                    Width="100"
                    FontSize="20"
                    Binding="{Binding FFMC}" />
                <controls:DataGridTextColumn
                    Header="DMC"
                    Width="100"
                    FontSize="20"
                    Binding="{Binding DMC}" />
                <controls:DataGridTextColumn
                    Header="DC"
                    Width="100"
                    FontSize="20"
                    Binding="{Binding DC}" />
                <controls:DataGridTextColumn
                    Header="ISI"
                    Width="100"
                    FontSize="20"
                    Binding="{Binding ISI}" />
                <controls:DataGridTextColumn
                    Header="BUI"
                    Width="100"
                    FontSize="20"
                    Binding="{Binding BUI}" />
                <controls:DataGridTextColumn
                    Header="FWI"
                    Width="100"
                    FontSize="20"
                    Binding="{Binding FWI}" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </RelativePanel>
    
</Page>

